[Unit]
Description=Pihole DNS server

[Container]
ContainerName=pihole
Image=docker.io/pihole/pihole:latest
PublishPort=53:53
PublishPort=4060:80
PublishPort=4061:443
Volume=pihole_config:/etc/pihole:Z
Volume=pihole_log:/var/log:Z
Environment=TZ=America/Sao_Paulo
# Manually set the secret cuz i cant be bothered
# podman exec -it (pihole) /bin/sh -c 'pihole setpassword'

[Service]
restart=always

[Install]
WantedBy=default.target
