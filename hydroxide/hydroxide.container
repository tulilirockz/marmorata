[Unit]
Description=Hydroxide multi server

[Service]
restart=always

[Install]
WantedBy=default.target

[Container]
ContainerName=hydroxide
Image=ghcr.io/tulilirockz/hydroxide:latest
AutoUpdate=registry
Volume=hydroxide_data:/home/hydroxide/.config/hydroxide:Z
Exec=serve
# CalDAV
PublishPort=9132:8080/tcp
PublishPort=9132:8080/udp
# SMTP
PublishPort=9551:1025/tcp
PublishPort=9551:1025/udp
# IMAP
PublishPort=9552:1143/tcp
PublishPort=9552:1143/udp
